<div>
  <h4>
    <%= t("application.#{action_header}") %>
  </h4>
</div>
<div>
  <%= render partial: 'layouts/components/errors',
             locals: { resource: @stock } %>
  <%= form_with(model: @stock) do |form| %>
    <%= render partial: 'stocks/components/form',
               locals: { form: form } %>
    <div class="row mt-3">
      <div class="col-lg-6">
        <%= link_to(t('application.cancel'), stocks_path, class: 'btn -transparent-standard') %>
      </div>
      <div class="col-lg-6">
        <button class="btn btn-secondary">
          <%= t("application.#{action}") %>
        </button>
      </div>
    </div>
  <% end %>
</div>
